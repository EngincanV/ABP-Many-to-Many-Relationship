@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model BookStore.Web.Pages.Authors.CreateModal

@{
    Layout = null;
}

<abp-dynamic-form abp-model="Author" asp-page="/Authors/CreateModal">
    <abp-modal>
        <abp-modal-header title="New Author"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>